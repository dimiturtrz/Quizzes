<h1>Editing Quiz</h1>

<%= render 'quiz_form' %>

<% @quiz.question.all.each do |question| %>
	<% answers = "" %>
	<% 1.upto(6){|curr| answers+= "#{eval "question.ans#{curr}"}/"} %>
	<p><%= "#{question.question}:#{answers}" %>
	<%= link_to 'Edit Question', edit_quiz_question_path(@quiz.id, question.id) %> | 
	<%= link_to 'Destroy Question', destroy_question_path(:quiz_id => @quiz.id, :id => question.id), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>

<%= link_to 'Create Question', create_quiz_question_path %> |
<%= link_to 'Show', @quiz %> |
<%= link_to 'Back', quizzes_path %>
